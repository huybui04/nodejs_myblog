<div class="course-videos">
    <div class="container">
        <div class="row" style="margin-bottom:150px;">
            <!-- cột 1 -->
            <div class="col-md-12">
                <div class="video">
                    <h2>{{course.name}}</h2>
                    <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{course.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    <p>{{course.description}}</p>
                </div>
            </div>
            <div class="col-md-12" style="margin-top:20%;">
                <h3 style="display: flex; flex-direction: column;">Tài liệu tham khảo
                    <a href="{{course.docLink}}">{{course.docLink}}</a>
                </h3>
            </div>                             
        </div>      
            <!-- cột 2 -->
        <div class="row" style="margin-top:-100px; margin-bottom:100px">  
            <div class="col-md-12">
                <p>Các video phần học khác</p>
                <div class="row">
                    {{#each recomendCourses}}
                    <div class="col-md-3">
                        <div class="sub-video">
                            <h2 class="recomend-video-name">{{recomendCourses.name}}</h2>
                            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{recomendCourses.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                            <p>{{recomendCourses.description}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>