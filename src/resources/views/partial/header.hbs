<script>
  const menubarsBtn = document.querySelector('.menubars-wrapper');
  const modalElement = document.querySelector('.mobile-menu_modal');
  const menuContainer = document.querySelector('.mobile-menu_container');
  const noticationIconBtn = document.querySelector('.notication-icon-wrap');
  const noticationContentElement = document.querySelector('.notication-content-wrapper');
    
  menubarsBtn.onclick = function() {
    modalElement.setAttribute('style','display:block');
  };

  document.addEventListener("mouseup", function(event) {
    if (!menuContainer.contains(event.target)) {
      modalElement.setAttribute('style','display:none');
    }
  });

  noticationIconBtn.onclick = function() {
    noticationContentElement.setAttribute('style','display:block');
  };

  document.addEventListener("mouseup", function(event) {
    if (!noticationContentElement.contains(event.target)) {
      noticationContentElement.setAttribute('style','display:none');
    }
  });

  
</script>
